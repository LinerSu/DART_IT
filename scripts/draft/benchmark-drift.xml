    <option name="-domain">Polka_ls</option>
    <option name="-sen">true</option> 
  </rundefinition>
-->

  <rundefinition name="drift-new">
    <option name="-out">2</option>
    <option name="-domain">Polka_ls</option>
    <option name="-sen">true</option> <!-- will be replaced by -trace-len {0,1,2} -->
  </rundefinition>


